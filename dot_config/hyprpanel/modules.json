{
  "custom/powerprofile": {
    "icon": {
      "power-saver": "󰌪 ",
      "balanced": " ",
      "performance": "󱎓 "
    },
    "label": "{percentage}%",
    "tooltip": "Power Profile {percentage}",
    "class": "power-profile-module",
    "interval": 5000,
    "execute": "~/.config/hyprpanel/scripts/battery.sh",
    "actions": {
      "onLeftClick": "~/.config/hyprpanel/scripts/cycle-power-profile.sh",
      "onScrollUp": "brightnessctl -d amdgpu_bl2 set +5%",
      "onScrollDown": "brightnessctl -d amdgpu_bl2 set 5%-"
    }
  }
}
